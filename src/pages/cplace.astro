---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
import CPlaceCover from "../../public/CPlaceCover.png";
---

<BaseLayout title = "C/Place" sideBarActiveItemID="projects">
    <div>
        <div class="text-3xl w-full font-bold mb-5" bigger-div>C/Place: Collaborative Pixel-Art Board</div>
    </div>

    <div class="container">
        <div class="image-with-text">
            <img
                src={CPlaceCover.src}
                width="1500px"
                height="1000px"
                format="webp"
                alt={"CPlaceCover"}
                class="max-w-full md:max-w-[13rem] rounded-lg bigger-div"
            />
            <div class="text">
            <h2>Some Text</h2>
            <p>This is the text that will wrap around the image. You can add more content to see how the text flows.</p>
            </div>
        </div>
    </div>
</div>
</BaseLayout>
